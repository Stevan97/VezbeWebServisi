<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DetailActivity">

    <TextView
        android:id="@+id/detail_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_zanr"
        android:layout_below="@id/detail_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_godinaFilma"
        android:layout_below="@id/detail_zanr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_Released"
        android:layout_below="@id/detail_godinaFilma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/website"
        android:layout_below="@id/detail_Released"
        android:autoLink="web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_ocenaRating"
        android:layout_below="@id/website"
        android:gravity="center_horizontal"
        android:text="Ocena Filma: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/rating"
        android:layout_below="@id/text_ocenaRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numStars="10" />

    <TextView
        android:id="@+id/text_Glumci"
        android:layout_below="@id/rating"
        android:gravity="center_horizontal"
        android:text="Glavni Glumci: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <ListView
            android:id="@+id/lista_glumci"
            android:layout_below="@id/text_Glumci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lista_glumci">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:minHeight="130dp"
            android:minWidth="115dp"
            android:maxWidth="115dp"
            android:maxHeight="130dp"
            />


    </RelativeLayout>

</RelativeLayout>